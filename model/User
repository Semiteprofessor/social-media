const { Sequelize, DataTypes } = require("sequelize");
const User = new Sequelize.define("user", {
  user_id: {
    type: DataTypes.STRING,
    allowNull: false,
    primaryKey: true,
  },
  surname: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  othernames: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  username: {
    type: DataTypes.STRING,
    allowNull: false,
    unique: true,
  },
  email_address: {
    type: DataTypes.STRING,
    allowNull: false,
    unique: true,
  },
  occupation: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  about_me: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  password_hash: {
    type: DataTypes.TEXT,
  },
  password_salt: {
    type: DataTypes.TEXT,
    allowNull: false,
  },
});

module.exports = User;
